<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/youtude"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/izone"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="안녕하세요"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/youtude" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/thumbnail1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/izone"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"/>
                <ImageView
                    android:id="@+id/youtuder1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/izone"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/thumbnail1"/>
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="안녕하세요"
                    android:layout_toRightOf="@+id/youtuder1"
                    android:layout_below="@+id/thumbnail1"/>
                <TextView
                    android:id="@+id/view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:text="안녕하세요"
                    android:layout_toRightOf="@+id/youtuder1"
                    android:layout_below="@+id/title1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/thumbnail2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/izone"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"/>
                <ImageView
                    android:id="@+id/youtuder2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/izone"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/thumbnail2"/>
                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="안녕하세요"
                    android:layout_toRightOf="@+id/youtuder2"
                    android:layout_below="@+id/thumbnail2"/>
                <TextView
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:text="안녕하세요"
                    android:layout_toRightOf="@+id/youtuder2"
                    android:layout_below="@+id/title2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/thumbnail3"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/izone"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"/>
                <ImageView
                    android:id="@+id/youtuder3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/izone"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/thumbnail3"/>
                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="안녕하세요"
                    android:layout_toRightOf="@+id/youtuder3"
                    android:layout_below="@+id/thumbnail3"/>
                <TextView
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:text="안녕하세요"
                    android:layout_toRightOf="@+id/youtuder3"
                    android:layout_below="@+id/title3"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>